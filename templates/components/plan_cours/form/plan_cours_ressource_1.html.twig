{{ include('components/plan_cours/_header.html.twig') }}

<div class="row">
    <div class="col-12">
        {{ form_row(form.responsable) }}
        Intervenants : <br>
        {{ form_row(form.intervenants) }}
    </div>
    <div class="col-12">
        {{ form_row(form.description) }}
    </div>
    <div class="col-12">
        Compétences et Apprentissages critiques visés :
        <ul>
            {% for ac in matiere.objet.apcRessourceApprentissageCritiques %}
                <li>{{ ac.apprentissageCritique.libelle }} ({{ ac.apprentissageCritique.niveau.competence.nomCourt }})
                </li>
            {% else %}
                <li>Aucun apprentissage critique défini</li>
            {% endfor %}
        </ul>
    </div>
    <div class="col-12">
        Liste des SAE mobilisant cette ressource
        <ul>
            {% for ac in matiere.objet.apcSaeRessources %}
                <li>{{ ac.sae.display }}</li>
            {% else %}
                <li>Aucune SAE</li>
            {% endfor %}
        </ul>
    </div>

    <div class="col-6">{{ form_row(form.nbNotes) }}</div>
    <div class="col-6">&nbsp;</div>
    <div class="col-3">{{ form_row(form.cmPrevu) }}</div>
    <div class="col-3">{{ form_row(form.tdPrevu) }}</div>
    <div class="col-3">{{ form_row(form.tpPrevu) }}</div>
    <div class="col-3">&nbsp;</div>
</div>

{{ form_row(form.modalitesEvaluations) }}

{{ form_row(form.bibliographie) }}
{{ form_row(form.commentaires_step1) }}


