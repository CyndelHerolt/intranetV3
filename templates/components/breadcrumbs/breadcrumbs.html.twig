<ol class="breadcrumb">
    {% if breadcrumbs|length > 0 %}
        {% set lastIndex = breadcrumbs|length - 1 %}
        {% set lastItem = breadcrumbs|last %}

        {% for item in breadcrumbs|slice(0, lastIndex) %}
            <li class="breadcrumb-item">
                <a href="{{ item.url }}"
                   title="{% if item.translatable %}{{ item.label|trans(item.transParameters, item.transDomain) }}{% else %}{{ item.label }}{% endif %}">
                    {% if item.icone != '' %}
                        <i class="{{ item.icone }}"></i>
                        <span class="sr-only">
                                {% if item.translatable %}
                                    {{ item.label|trans(item.transParameters, item.transDomain) }}
                                {% else %}
                                    {{ item.label }}
                                {% endif %}
                            </span>
                    {% else %}
                        {% if item.translatable %}
                            {{ item.label|trans(item.transParameters, item.transDomain) }}
                        {% else %}
                            {{ item.label }}
                        {% endif %}
                    {% endif %}
                </a>
            </li>
        {% endfor %}

        <li class="breadcrumb-item active" aria-current="page">
            {% if lastItem.icone != '' %}
            <i class="{{ lastItem.icone }}"></i>
            {% endif %}

            {% if lastItem.translatable %}
                {{ lastItem.label|trans(lastItem.transParameters, lastItem.transDomain) }}
            {% else %}
                {{ lastItem.label }}
            {% endif %}
        </li>
    {% endif %}
</ol>
