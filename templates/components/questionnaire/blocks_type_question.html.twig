{% block libelle %}
    <legend class="col-form-label {% if obligatoire %}required{% endif %}"><strong>{{ numero }}</strong>.
        {% if config is null %}
            {{ libelle }}
        {% else %}
            {{ libelle|personnalise(config) }}
        {% endif %}
    </legend>
{% endblock %}

{% block liste_reponses %}
    {% for reponse in reponses %}
        <div class="col-sm-12 col-md-2">
            <div class="form-check">
                <input type="{{ type_question }}" id="quizz_question_qcu_{{ name }}_{{ reponse.id }}"
                       name="quizz_question_reponses_{{ name }}"
                       data-action="change->enquete#change"
                       data-fieldset="{{ id }}"
                       data-typeQuestionnaire="{{ type_question }}"
                        {% if apercu is not defined or apercu == false %}
                            data-etudiant="{{ etudiant_id }}"
                        {% endif %}
                        {% if reponseEtudiant != null and
                            reponseEtudiant.valeur == reponse.valeur %}checked{% endif %}
                        {% if obligatoire %}required{% endif %}
                       class="form-check-input"
                       value="{{ reponse.valeur }}">
                <label class="form-check-label required" for="quizz_question_qcu_{{ name }}_{{ reponse.id }}">{{ reponse.libelle }}</label>
                {% if reponse.valeur == "CHX:OTHER" %}
                    <input type="text" id="quizz_question_qcm_autre_{{ name }}_{{ reponse.id }}"
                           name="quizz_question_reponses_{{ name }}_autre"
                           data-typeQuestionnaire="{{ type_question }}"
                           data-action="change->enquete#onTextAreaChange"
                            {% if mode is defined or mode == false %}
                                data-etudiant="{{ etudiant_id }}"
                            {% endif %}
                           class="form-control"
                            {% if reponseEtudiant != null and reponseEtudiant.valeur == 'CHX:OTHER' %}
                                value="{{ reponseEtudiant.complementValeur }}"
                            {% endif %}
                    >
                {% endif %}
            </div>
            <div class="form-control-feedback"></div>
        </div>
    {% endfor %}
{% endblock %}
