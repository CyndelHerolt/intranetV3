<div class="card">
    <header class="card-header">
        <h4 class="card-title">
            {{ 'heading.edt.dashboard'|trans }} | {{ user_data.user.displayPr }} |
                                                Semaine {{ edt.semaine }}
                                                (semaine formation {{ edt.semaineFormation }})
        </h4>
        <div class="card-header-actions">
            <ul class="card-controls">
                <li class="dropdown">
                    <a data-toggle="dropdown" href="#">
                        <i class="fas fa-ellipsis-h rotate-90"
                           data-provide="tooltip"
                           title="Options d'export ou de synchronisation"></i>
                        <span class="sr-only">Options d'export ou de synchronisation</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        {# todo:                          <a href="{{ path('edt_intervenant_export_semaine_courante', {semaine:12}) }}" #}
                        {# class="dropdown-item"><i #}
                        {# class="fa fa-file-pdf"></i>{{ 'exporter.semaine.courante.pdf'|trans }}</a> #}
                        {# <a href="{{ path('edt_intervenant_export_annee') }}" #}
                        {# class="dropdown-item"><i #}
                        {# class="fas fa-file-export"></i>{{ 'edt.intervenant.export.annee'|trans }} #}
                        {# </a> #}
                        {# <a href="{{ path('edt_intervenant_export_ical') }}" #}
                        {# class="dropdown-item"><i #}
                        {# class="fas fa-file-export"></i>{{ 'edt.intervenant.export.ical'|trans }}</a> #}
                        <a href="#"
                           data-provide="modaler tooltip"
                           data-url="{{ path('edt_affiche_ical') }}"
                           data-placement="bottom"
                           title="{{ 'atitle.lien_ical'|trans }}"
                           data-title="{{ 'edt.intervenant.synchro.ical.heading'|trans }}"
                           class="dropdown-item"><i
                                    class="fas fa-file-export"></i>{{ 'edt.intervenant.synchro.ical'|trans }}
                        </a>
                        <a class="dropdown-item" href="{{ path('previsionnel_chronologique') }}"
                           title="{{ 'atitle.service_chronologique'|trans }}"
                        >
                            <i class="fas fa-bell"></i>
                            {{ 'chronologique'|trans }}
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </header>
    <div class="card-body">
        {{ include('edt/_navpersonnel.html.twig') }}
        <br>
        <div class="row">
            <div class="col-sm-12">
                <div class="schedule-individual" aria-labelledby="schedule-heading">
                    {{ include('edt/_header_edt2.html.twig') }}

                    {% for ligne in 0..24 %}
                        <h2 class="time-slot" style="grid-row: time-{{ tabHeures[ligne][0] }};">{{ tabHeures[ligne][1] }}</h2>
                        {% for j in 1..5 %}
                            {% if edt.planning[j][ligne] is defined %}
                                <div class="session {{ edt.planning[j][ligne].classCss }}" style="grid-column: track-{{ j }}; grid-row:
                                        time-{{ edt
                                .planning[j][ligne].gridStart }} / time-{{ edt.planning[j][ligne].gridEnd }};">
                                    <div class="session-body">
                                        <a href="{{ path('application_personnel_absence_from_planning',{
                                            'event':edt.planning[j][ligne].id,
                                            'source': edt.planning[j][ligne].source }) }}">
                                            <span class="session-title">{{ edt.planning[j][ligne].matiere|raw }}</span>
                                            <span class="session-time">{{ edt.planning[j][ligne].heureDebut|format_time('short') }} - {{ edt
                                                .planning[j][ligne].heureFin|format_time('short') }}</span>
                                            <span class="session-track">{{ edt.planning[j][ligne].groupe }}</span>
                                            <span class="session-room">{{ edt.planning[j][ligne].salle }}</span>
                                        </a>
                                    </div>
                                    {# <div class="session-footer"> #}
                                    {# <div class="row no-gutters"> #}

                                    {# <div class="col-4"> #}
                                    {# <a href="" class="btn btn-block btn-purple no-radius" #}
                                    {# title="Cahier de texte enseignant"> #}
                                    {# <i class="fas fa-book-open"></i> #}
                                    {# </a> #}
                                    {# </div> #}
                                    {# <div class="col-4"> #}
                                    {# <a href="" class="btn btn-block btn-warning no-radius" #}
                                    {# title="Appel fait, pas d'absents"> #}
                                    {# <i class="fas fa-users-slash"></i> #}
                                    {# </a> #}
                                    {# </div> #}
                                    {# <div class="col-4"> #}
                                    {# <a href="" class="btn btn-block btn-danger no-radius"> #}
                                    {# <i class="fas fa-times"></i> #}
                                    {# </a> #}
                                    {# #}{# <a href="" class="btn btn-block btn-success no-radius"> #}
                                    {# #}{# <i class="fas fa-check"></i> #}
                                    {# #}{# </a> #}
                                    {# </div> #}
                                    {# </div> #}
                                    {# </div> #}
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
