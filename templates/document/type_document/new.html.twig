{% extends is_granted('ROLE_QUALITE') ? 'base-super_admin.html.twig' : 'base.html.twig' %}

{% block header %}
    {{ 'adm.type_document.new.heading'|trans }}
{% endblock %}

{%block headeractions %}
    <div class="header-action">
        {% if is_granted('ROLE_QUALITE') %}
            {{ include('composants/sadm-buttons-new.html.twig', {elt: 'qualite_type_document'}) }}
        {% else %}
            {{ include('composants/adm-buttons-new.html.twig', {elt: 'type_document'}) }}
        {% endif %}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.type_document.new.heading'|trans }}</h4>
        <div class="card-body">
            {{ include('composants/adm-form.html.twig') }}
        </div>
    </div>
{% endblock %}
