{% extends is_granted('ROLE_QUALITE') ? 'base-super_admin.html.twig' : 'base.html.twig' %}

{% block header %}
    {{ 'adm.document.new.heading'|trans }}
{% endblock %}

{% block headeractions %}
<div class="header-action">
    <div class="header-action">
        {% if is_granted('ROLE_QUALITE') %}
            {{ include('composants/sadm-buttons-new.html.twig', {elt: 'qualite_documents'}) }}
        {% else %}
            {{ include('composants/adm-buttons-new.html.twig', {elt: 'document'}) }}
        {% endif %}
    </div>
    {% endblock %}

    {% block content %}
        <div class="card">
            <h4 class="card-title">{{ 'adm.document.new.heading'|trans }}</h4>
            <div class="card-body">
                {{ include('composants/adm-form.html.twig', {button_add_other:true}) }}
            </div>
        </div>
    {% endblock %}
