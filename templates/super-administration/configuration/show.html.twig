{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'adm.configuration.show.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('sa_configuration_edit', {id: configuration.id}) }}" class="btn btn-warning btn-sm
            btn-float" title="{{ 'atitle.modifier'|trans }}" data-provide="tooltip"
               data-placement="bottom"><i class="material-icons">edit</i></a>
            <a href="{{ path('super_admin_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><span
                        class="material-icons">build</span></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.configuration.show.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Cle</th>
                    <td>{{ configuration.cle }}</td>
                </tr>
                <tr>
                    <th>Valeur</th>
                    <td>{{ configuration.valeur }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.created'|trans }}</th>
                    <td>{{ configuration.created ? configuration.created|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.updated'|trans }}</th>
                    <td>{{ configuration.updated ? configuration.updated|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    {# todo: ajouter le type et g√©rer l'upload ? si c'est un fichier ?#}
{% endblock %}
