{% extends 'base.html.twig' %}

{% block title %}Configuration{% endblock %}

{% block body %}
    <h1>Configuration</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ configuration.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ configuration.created ? configuration.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ configuration.updated ? configuration.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cle</th>
                <td>{{ configuration.cle }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ configuration.valeur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('configuration_index') }}">back to list</a>

    <a href="{{ path('configuration_edit', {'id': configuration.id}) }}">edit</a>

    {{ include('configuration/_delete_form.html.twig') }}
{% endblock %}
