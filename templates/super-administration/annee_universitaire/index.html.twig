{% extends 'base-super_admin.html.twig' %}


{% block header %}
    {{ 'adm.annee_universitaire.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        {{ include('composants/sadm-buttons-index.html.twig', {elt:'annee_universitaire'}) }}
    </div>
{% endblock %}

{% block content %}
    {# feature: cr√©ation directement dans le datatable ??? #}
    <div class="card">
        <h4 class="card-title">{{ 'adm.annee_universitaire.index.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table table-striped table-bordered" data-provide="datatables">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Annee</th>
                    <th>Commentaire</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for annee_universitaire in annee_universitaires %}
                    <tr>
                        <td>{{ annee_universitaire.libelle }}</td>
                        <td>{{ annee_universitaire.annee }}</td>
                        <td>{{ annee_universitaire.commentaire }}</td>
                        <td>
                            {{ include('composants/sadm-buttons-table-index.html.twig', {elt:'annee_universitaire', id: annee_universitaire
                                .id}) }}

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('sa_annee_universitaire_export', {_format:'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf-o"},
        {
            type:'info',
            href:path('sa_annee_universitaire_export', {_format:'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-text-o'
        },
        {
            type:'info',
            href:path('sa_annee_universitaire_export', {_format:'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel-o'
        },
        {
            type:'info',
            href:path('sa_annee_universitaire_new'),
            title: 'ajouter'|trans,
            icone: 'ti-plus'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'super-administration_annee_universitaire'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}

