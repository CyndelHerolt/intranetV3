{% extends 'base-super_admin.html.twig' %}

{% block header %}
    Détails du questionnaire {{ questionnaire.libelle }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('super_admin_homepage') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_administration'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_administration'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">Détails du questionnaire {{ questionnaire.libelle }}</h4>
        <div class="card-body">
            Il y a {{ reponses|length }} réponses.
        </div>
    </div>
{% endblock %}
