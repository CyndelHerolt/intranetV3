{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'enquete.index.heading'|trans }} | {{ typeDestinataire == 'etudiant' ? 'Etudiants' : typeDestinataire == 'personnel' ? 'Personnels' : 'Extérieurs' }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('adm_questionnaire_creation_index',{type:'administratif'}) }}"
               class="btn btn-info btn-sm btn-float"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
               title="Créer une enquête">
                <i class="{{ iconAdd }}">
                    <span class="sr-only">Créer une enquête</span>
                </i>
            </a>
            <a href="{{ path('sa_qualite_index') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_enquete'|trans }}"
               data-bs-toggle="tooltip" data-bs-placement="bottom"
            >
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_enquete'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'enquete.index.heading'|trans }}
            | {{ typeDestinataire == 'etudiant' ? 'Etudiants' : typeDestinataire == 'personnel' ? 'Personnels' : 'Extérieurs' }}</h4>
        <div class="card-body">
            {{ table_render(table) }}
        </div>
    </div>
{% endblock %}


