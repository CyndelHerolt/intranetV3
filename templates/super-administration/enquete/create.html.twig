{% extends 'base-administratif.html.twig' %}

{% block header %}
    {{ 'enquete.create.heading'|trans({'%semestre%':semestre.libelle}) }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administratif_enquete_index') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_enquete'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="ti-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_enquete'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'enquete.create.heading'|trans({'%semestre%':semestre.libelle}) }}</h4>
        <div class="card-body">
            <form data-provide="wizard" novalidate="true">
                <ul class="nav nav-process nav-process-circle">
                    <li class="nav-item">
                        <span class="nav-title">Paramètrage général</span>
                        <a class="nav-link" data-toggle="tab" href="#wizard-1"></a>
                    </li>

                    <li class="nav-item">
                        <span class="nav-title">Questions</span>
                        <a class="nav-link" data-toggle="tab" href="#wizard-2"></a>
                    </li>

                    <li class="nav-item">
                        <span class="nav-title">Matières</span>
                        <a class="nav-link" data-toggle="tab" href="#wizard-3"></a>
                    </li>

                    <li class="nav-item">
                        <span class="nav-title">Confirmation</span>
                        <a class="nav-link" data-toggle="tab" href="#wizard-4"></a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade active show" id="wizard-1" data-provide="validation" data-url="{{ path
                        ('administratif_enquete_wizard_1', {semestre:semestre.id}) }}">

                    </div>

                    <div class="tab-pane fade" id="wizard-2" data-provide="validation">
                        <p class="text-center fs-35 text-muted">Questionnaire Qualité : <strong
                                    class="text-primary">questions</strong></p>
                        <hr class="w-100px">
                        //liste de toutes les questions disponibles. Possibilité d'organiser l'odre, de faire des
                        coupures pages et d'ajouter
                        des titres (1 niveau) et du texte.
                        //Possibilité de placer la partie "matières" dans ces questions.

                    </div>

                    <div class="tab-pane fade" id="wizard-3" data-provide="validation">
                        <p class="text-center fs-35 text-muted">Questionnaire Qualité : <strong
                                    class="text-primary">matières</strong></p>

                        <hr class="w-100px">
                        //Liste des matières par semestre.
                        //Questionnaire type puis choix des matières à afficher

                    </div>


                    <div class="tab-pane fade" id="wizard-4">
                        <br><br>
                        <p class="text-center fs-35 text-muted">Ready to <strong class="text-primary">go?</strong></p>
                        <p class="text-center text-gray">Rapidiously facilitate web-enabled products through innovative
                                                         collaboration.</p>
                        <hr class="w-100px">
                        <br>

                        <div class="px-20">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Username</label>
                                <div class="form-control-plaintext col-sm-8">TheAdmin</div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Email</label>
                                <div class="form-control-plaintext col-sm-8">support@theadmin.io</div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Card number</label>
                                <div class="form-control-plaintext col-sm-8">xxxx-xxxx-xxxx-3648</div>
                            </div>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="wizard-dynamic-1" data-url="../assets/data/wizard-1.html">
                        <div class="spinner-circle center-h my-50"></div>
                    </div>
                </div>

                <hr>

                <div class="flexbox">
                    <button class="btn btn-secondary" data-wizard="prev" type="button">Back</button>
                    <button class="btn btn-secondary" data-wizard="next" type="button">Next</button>
                    <button class="btn btn-primary d-none" data-wizard="finish" type="submit">Finish</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
