{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'enquete.semestre.heading'|trans({'%semestre%':semestre.libelle}) }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administratif_enquete_index') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_enquete'|trans }}"
               data-bs-toggle="tooltip" data-bs-placement="bottom"
            >
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_enquete'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'enquete.semestre.heading'|trans({'%semestre%':semestre.libelle}) }}</h4>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Période</th>
                    <th>Nb Réponse</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for questionnaire in  semestre.qualiteQuestionnaires %}
                    <tr id="ligne_{{ questionnaire.id }}">
                        <td>{{ questionnaire.libelle }}</td>
                        <td>du {{ questionnaire.dateOuverture|format_datetime('long', 'short') }} au {{ questionnaire
                            .dateFermeture|format_datetime('long', 'short') }}</td>
                        <td>{{ nbReponses[questionnaire.id].nbReponses }} / {{ semestre.etudiants|length }}</td>
                        <td>

                            <a href="{{ path('administratif_enquete_duplicate', {questionnaire: questionnaire.id}) }}"
                               class="btn btn-success btn-outline btn-square" data-bs-toggle="tooltip" data-bs-placement="bottom"
                               title="{{ 'atitle.dupliquer'|trans }}"><i class="{{ iconDuplicate }}"></i></a>
                            <a href="{{ path('administratif_enquete_show', {questionnaire: questionnaire.id}) }}"
                               class="btn btn-info btn-outline btn-square" data-bs-toggle="tooltip" data-bs-placement="bottom"
                               title="{{ 'atitle.details'|trans }}"><i class="fas
                               fa-eye"></i></a>
                            <a href="{{ path('administratif_enquete_edit', {questionnaire: questionnaire.id}) }}"
                               class="btn btn-warning btn-outline btn-square" data-bs-toggle="tooltip" data-bs-placement="bottom"

                               title="{{ 'atitle.modifier'|trans }}"><i class="{{ iconEdit }}"
                                ></i></a>
                            <a href="{{ path('administratif_enquete_delete', {questionnaire: questionnaire.id}) }}" data-csrf="{{ csrf_token('delete' ~ questionnaire.id) }}"
                               class="btn btn-danger btn-outline btn-square supprimer" data-id="id" data-bs-toggle="tooltip" data-bs-placement="bottom"
                               title="{{ 'atitle.supprimer'|trans }}">
                                <i class="{{ iconDelete }}"></i>
                            </a>
                            <a href="{{ path('administratif_enquete_export', {questionnaire: questionnaire.id}) }}"
                               class="btn btn-info btn-outline btn-square"
                               data-bs-toggle="tooltip" data-bs-placement="bottom"

                               title="{{ 'atitle.export'|trans }}"
                            >
                                <i class="fas fa-download"></i>
                            </a>
                            <a href="{{ path('administratif_enquete_delete', {questionnaire: questionnaire.id}) }}" data-csrf="{{ csrf_token('delete' ~ questionnaire.id) }}"
                               class="btn btn-danger btn-outline btn-square vider" data-id="id" data-bs-toggle="tooltip" data-bs-placement="bottom"
                               title="{{ 'atitle.vider'|trans }}">
                                <i class="fas fa-broom"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            Aucun questionnaire... En créer un ...
                            <a href="{{ path('administratif_enquete_semestre_new',
                                {semestre:semestre.id}) }}" class="btn btn-primary">Créer un questionnaire</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <h4 class="card-title">{{ 'detail.enquete.semestre.heading'|trans({'%semestre%':semestre.libelle}) }}</h4>
        <div class="card-body">
            <ul class="nav nav-tabs">
                {% for questionnaire in  semestre.qualiteQuestionnaires %}
                    <li class="nav-item">
                        <a class="nav-link {% if loop.first %} active{% endif %}" data-bs-toggle="tab"
                           href="#questionnaire{{ questionnaire.id }}">{{ questionnaire.libelle }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="tab-content">
                {% for questionnaire in  semestre.qualiteQuestionnaires %}
                    <div class="tab-pane {% if loop.first %}fade active show{% endif %}"
                         id="questionnaire{{ questionnaire.id }}">
                        <a href="{{ path('administratif_enquete_relance',{questionnaire:questionnaire.id}) }}" class="btn btn-warning
                        btn-block">
                            Relancer les questionnaires non complétés
                        </a><br>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Etudiant</th>
                                <th>Répondu</th>
                                <th>Le</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for etudiant in  semestre.etudiants %}
                                <tr>
                                    <td>{{ etudiant.display }}</td>
                                    {% if quizzEtudiant[questionnaire.id] is defined and quizzEtudiant[questionnaire.id][etudiant.id] is defined %}
                                        {% if quizzEtudiant[questionnaire.id][etudiant.id].termine == true %}
                                            <td id="termine_{{ quizzEtudiant[questionnaire.id][etudiant.id].id }}">
                                                Terminé
                                            </td>
                                            <td id="valide_{{ quizzEtudiant[questionnaire.id][etudiant.id].id }}">Validé
                                                                                                                  le {{ quizzEtudiant[questionnaire.id][etudiant.id]
                                                .dateTermine|format_datetime('short', 'short') }}</td>
                                        {% else %}
                                            <td>En cours</td>
                                            <td>Modifié
                                                le {{ quizzEtudiant[questionnaire.id][etudiant.id].updated|format_datetime('short','short') }}</td>
                                        {% endif %}
                                        <td>
                                            {% if quizzEtudiant[questionnaire.id][etudiant.id].termine == true %}
                                                <a href="#"
                                                   class="btn btn-info btn-outline btn-square deverouiller"
                                                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                                                   title="{{ 'atitle.deverouiller'|trans }}">
                                                    <i class="fas fa-unlock" data-id="{{ quizzEtudiant[questionnaire.id][etudiant.id].id }}"></i>
                                                </a>
                                            {% endif %}
                                            <a href="{{ path('administratif_enquete_etudiant_voir_modifier',
                                                {questionnaire: quizzEtudiant[questionnaire.id][etudiant.id].id}) }}"
                                               class="btn btn-warning btn-outline btn-square"
                                               data-bs-toggle="tooltip" data-bs-placement="bottom"

                                               title="{{ 'atitle.voir_modifier'|trans }}">
                                                <i class="{{ iconEdit }}"></i>
                                            </a>
                                            <a href="{{ path('administratif_enquete_etudiant_supprimer',
                                                {questionnaire: quizzEtudiant[questionnaire.id][etudiant.id].id}) }}" data-csrf="{{ csrf_token('delete' ~ quizzEtudiant[questionnaire.id][etudiant.id].id) }}"
                                               class="btn btn-danger btn-outline btn-square supprimer"
                                               data-bs-toggle="tooltip" data-bs-placement="bottom"
                                               title="{{ 'atitle.supprimer'|trans }}">
                                                <i class="{{ iconDelete }}"></i>
                                            </a>
                                        </td>
                                    {% else %}
                                        <td>Non</td>
                                        <td>-</td>
                                        <td>
                                            Relancer
                                        </td>
                                    {% endif %}

                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">
                                        Aucun questionnaire... En créer un ...
                                        <a href="{{ path('administratif_enquete_semestre_new',
                                            {semestre:semestre.id}) }}" class="btn btn-primary">Créer un
                                                                                                questionnaire</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sadm.enquete') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sadm.enquete') }}
{% endblock %}
