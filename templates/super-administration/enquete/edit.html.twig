{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'enquete.edit.heading'|trans({'%semestre%': semestre.libelle}) }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administratif_enquete_semestre', {semestre: semestre.id}) }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_enquete'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_enquete'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'enquete.edit.heading'|trans({'%semestre%': semestre.libelle}) }}</h4>
        <div class="card-body">
            {{ include('super-administration/enqueteCreation/_nav.html.twig') }}

            <div class="tab-content">
                <div class="tab-pane fade {% if step is not defined or step == 1 %}active show{% endif %}" id="wizard-1" data-provide="validation">
                    {{ render(path('administratif_enquete_wizard_1', {action: 'edit', semestre: semestre.id,
                        qualiteQuestionnaire:
                        questionnaire.id})) }}
                </div>

                {# <div class="tab-pane fade {% if step is defined and step == 2 %}active show{% endif %}" #}
                {# id="wizard-2" data-provide="validation"> #}
                {# <p class="text-center fs-35 text-muted">Questionnaire Qualité : <strong #}
                {# class="text-primary">questions</strong></p> #}
                {# <hr class="w-100px"> #}
                {# //liste de toutes les questions disponibles. Possibilité d'organiser l'odre, de faire des #}
                {# coupures pages et d'ajouter #}
                {# des titres (1 niveau) et du texte. #}
                {# //Possibilité de placer la partie "matières" dans ces questions. #}
                {# {{ render(path('administratif_enquete_wizard_2', {action: 'edit', semestre: semestre.id, #}
                {# qualiteQuestionnaire: questionnaire.id})) }} #}
                {# </div> #}

                <div class="tab-pane fade {% if step is defined and step == 2 %}active show{% endif %}"
                     id="wizard-3" data-provide="validation">
                    <p class="text-center fs-35 text-muted">Questionnaire Qualité : <strong
                                class="text-primary">Matières</strong></p>

                    <hr class="w-100px">
                    {% for section in questionnaire.sections %}
                        <h2>{{ section.section.titre }}</h2>
                        {% if section.config != null %}
                            <div class="row">
                                {% for previsionnel in previsionnels %}
                                    {% if previsionnel.matiere_id != 0 and previsionnel.personnel_id != 0 %}
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <input type="checkbox" value="{{ previsionnel.id }}" name="config_{{ section.id }}[]" id="config_{{ section.id }}_{{ previsionnel.id }}" {% if
                                                    previsionnel.id in section.previs %} checked {% endif %}>
                                                <label for="config_{{ section.id }}_{{ previsionnel.id }}">
                                                    {{ previsionnel.matiere_code }} | {{ previsionnel.matiere_libelle }}
                                                                                    par {{ previsionnel.personnel_prenom }} {{ previsionnel.personnel_nom }}</label>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <button class="btn btn-success validConfiguration" data-section="{{ section.id }}">
                                Enregistrer
                            </button>
                        {% else %}
                            <div class="alert alert-info">
                                Pas de configuration pour cette section.
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>


                <div class="tab-pane fade {% if step is defined and step == 3 %}active show{% endif %}"
                     id="wizard-4">
                    <br><br>
                    <p class="text-center fs-35 text-muted">Ready to <strong class="text-primary">go?</strong></p>
                    <p class="text-center text-gray">Rapidiously facilitate web-enabled products through innovative
                                                     collaboration.</p>
                    <hr class="w-100px">
                    <br>

                    <div class="px-20">
                        <div class="form-group row">
                            <label class="col-form-label col-sm-4">Username</label>
                            <div class="form-control-plaintext col-sm-8">TheAdmin</div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-sm-4">Email</label>
                            <div class="form-control-plaintext col-sm-8">support@theadmin.io</div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-sm-4">Card number</label>
                            <div class="form-control-plaintext col-sm-8">xxxx-xxxx-xxxx-3648</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sadm.enquete') }}
{% endblock %}
