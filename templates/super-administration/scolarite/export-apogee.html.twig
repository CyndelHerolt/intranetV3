{% extends 'base-administratif.html.twig' %}

{% block header %}
    {{ 'scolarite.diplome.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administratif_scolarite') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_scolarite'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_scolarite'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">Export vers Apogée | {{ semestre.display }}</h4>
        <div class="card-body">

            <form action="{{ path('administratif_scolarite_semestre_genere_apogee', {semestre:semestre.id}) }}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-2">
                        Fichier type
                    </label>
                    <div class="col-sm-10">
                        <input type="file" name="fichier" class="form-control"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-success">Export Apogée (va générer le fichier txt pour la
                                                                        scolarité)
                </button>
            </form>
            <br/>
            {#            <a href="{{ path('da_kernel_administration_sc_export_gj', {semestre:semestre.id}) }}" class="btn btn-block btn-success">#}
            {#                Sauvegarde Excel / Fichier de Grand Jury#}
            {#            </a>#}
        </div>
    </div>
{% endblock %}
