{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'sadm.gestion.rh.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('sa_rh_import_personnel') }}" class="btn btn-info btn-sm btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.import_personnel'|trans }}"><i class="fas
               fa-file-import"></i></a>
            <a href="{{ path('sa_rh_add_personnel') }}" class="btn btn-info btn-sm btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.creer_nouveau'|trans }}"><i class="fas fa-plus"></i></a>
            <a href="{{ path('super_admin_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}">
                <i class="{{ iconDashboard }}"><span class="sr-only">dashboard</span></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'sadm.gestion.rh.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table table-bordered table-striped" id="datatableRh">
                <thead>
                <tr>
                    <th>{{ 'table.numero_harpege'|trans }}</th>
                    <th>{{ 'table.nom'|trans }}</th>
                    <th>{{ 'table.prenom'|trans }}</th>
                    <th>{{ 'table.login'|trans }}</th>
                    <th>{{ 'table.departements'|trans }}</th>
                    <th>{{ 'table.deleted'|trans }}</th>
                    <th>{{ 'table.actions'|trans }}</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sadm.personnels') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sadm.personnels') }}
{% endblock %}
