<table class="table table-bordered">
    <tbody>
    <tr>
        <th style="width: 25%">Nom de la SAÉ</th>
        <td>{{ apc_sae.libelle }}</td>
        <th style="width: 25%">Code de la SAÉ</th>
        <td>{{ apc_sae.codeSae }}</td>
    </tr>

    <tr>
        <th>Description des objectifs de la SAÉ et de la problèmatique professionnelle associée</th>
        <td colspan="3">{{ apc_sae.description|raw }}</td>
    </tr>
    <tr>
        <th>Compétence(s) ciblée(s)</th>
        <td colspan="3">
            {% for competence in apc_sae.apcSaeCompetences %}
                <span class="badge badge-lg badge-{{ competence.competence.couleur }}"
                      data-provide="tooltip"
                title="{{ competence.competence.libelle }}">
                    {{ competence.competence.nomCourt }}
                </span>
            {% endfor %}{# todo: modal pour avoir le détail des AC sur chaque compétence #}
        </td>
    </tr>

    <tr>
        <th>Apprentissage(s) critique(s) courvert(s)</th>
        <td colspan="3">

            {% for ac in apc_sae.apcSaeApprentissageCritiques %}
                <span class="badge badge-{{ ac.apprentissageCritique.competence.couleur }}"
                      data-provide="tooltip"
                title="{{ ac.apprentissageCritique.libelle }}">
                    {{ ac.apprentissageCritique.code }}
                </span>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <th rowspan="2" style="width:25%">Heures de formation</th>
        <th class="text-center" style="width:25%">CM</th>
        <th class="text-center" style="width:25%">TD</th>
        <th class="text-center" style="width:25%">TP</th>
    </tr>
    <tr>
        <td class="text-center">{{ apc_sae.heuresCM }} heure(s)</td>
        <td class="text-center">{{ apc_sae.heuresTD }} heure(s)</td>
        <td class="text-center">{{ apc_sae.heuresTP }} heure(s)</td>
    </tr>
    <tr>
        <th>Heures "projet tutoré"</th>
        <td colspan="3">{{ apc_sae.heuresProjet }} heure(s)</td>
    </tr>
    <tr>
        <th>Liste des ressources mobilisées et combinées</th>
        <td colspan="3">
                {% for ressource in apc_sae.apcSaeRessources %}
                    <span class="badge badge-primary"
                          data-provide="tooltip"
                          title="{{ ressource.ressource.libelle }}">
                    {{ ressource.ressource.codeRessource }} | {{ ressource.ressource.libelle }}
                    </span>
                {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Type de livrable ou de production</th>
        <td colspan="3">{{ apc_sae.livrables|raw }}</td>
    </tr>
    <tr>
        <th>Exemples</th>
        <td colspan="3">{{ apc_sae.exemples|raw }}</td>
    </tr>
    </tbody>
</table>
