{% extends 'base.html.twig' %}

{% block header %}
    {{ 'administration.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_dashboard'|trans }}"><i
                        class="material-icons">dashboard</i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    {% if user_data.isGoodDepartement('ROLE_CDD') or user_data.isGoodDepartement('ROLE_DDE') or user_data.isGoodDepartement('ROLE_ASS') %}
        {{ include('administration/_cdd_dde_ass.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_RP') %}
        {{ include('administration/_rp.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_STA') %}
        {{ include('administration/_sta.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_AUTEUR') %}
        {{ include('administration/_auteur.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_EDT') %}
        {{ include('administration/_edt.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_ABS') %}
        {{ include('administration/_abs.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_NOTES') %}
        {{ include('administration/_notes.html.twig') }}
    {% elseif user_data.isGoodDepartement('ROLE_MAT') %}
        {{ include('administration/_materiel.html.twig') }}
    {% endif %}

{% endblock %}
