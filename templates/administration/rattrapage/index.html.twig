{% extends 'base.html.twig' %}

{% block header %}
    Liste des <strong>rattrapages du semestre {{ semestre.libelle }}</strong>
{% endblock %}

{% block headerright %}
    <div class="right gap-items-2">
        {% for sem in user_data.semestresActifs %}
            <a href="{{ path('administration_rattrapage_semestre_index', {semestre:sem.id}) }}"
               class="btn btn-round {% if sem.id == semestre.id %}btn-primary{% endif %}"
               title="{{ 'atitle.changer.semestre'|trans }}"
               data-provide="tooltip"
               data-placement="bottom"
            >{{ sem.libelle }}</a>
        {% endfor %}
    </div>
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_rattrapage_delete_all', {semestre: semestre.id}) }}"
               class="btn btn-danger btn-sm btn-float supprimer" data-provide="tooltip"
               data-placement="bottom" title="Supprimer toutes les demandes de rattrapage pour l'année {{ semestre
            .annee.libelle }}"><i class="{{ iconDelete }}"></i></a>
            <a href="{{ path('administration_rattrapage_planning_index', {diplome: semestre.diplome.id}) }}"
               class="btn btn-success btn-sm btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.planning'|trans }}"><i class="fas fa-calendar-alt"></i></a>
            <a href="{{ path('administration_semestre_index', {semestre:semestre.id}) }}"
               class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_semestres'|trans }}"><i class="fas fa-arrow-left"></i></a>
            <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><i class="{{ iconAdmin }}"><span class="sr-only">Administration</span></i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered" data-provide="datatables">
                <thead>
                <tr>
                    <th>{{ 'table.etudiant'|trans }}</th>
                    <th>{{ 'table.groupes'|trans }}</th>
                    <th>{{ 'table.matiere'|trans }}</th>
                    <th>{{ 'table.personnel'|trans }}</th>
                    <th>{{ 'table.date_evaluation'|trans }}</th>
                    <th>{{ 'table.date_demande'|trans }}</th>
                    <th>{{ 'table.absence_justifiee'|trans }}</th>
                    <th>{{ 'table.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for rattrapage in rattrapages|filter(rattrapage => (matieres[rattrapage.typeIdMatiere] is defined
                    and matieres[rattrapage.typeIdMatiere].semestre.id == semestre.id)) %}
                    <tr>
                        <td>{{ rattrapage.etudiant.display }}</td>
                        <td>{{ rattrapage.etudiant|displayGroupes }}</td>
                        <td>{{ rattrapage.typeIdMatiere }} {{ matieres[rattrapage.typeIdMatiere] is defined ?
                            matieres[rattrapage.typeIdMatiere]
                            .codeMatiere : 'non.defini'|trans }}</td>
                        <td>{{ rattrapage.personnel ? rattrapage.personnel.display : 'non.defini'|trans }}</td>
                        <td>{{ rattrapage.dateEval ? rattrapage.dateEval|format_date('long') : 'non.defini'|trans }}</td>
                        <td>{{ rattrapage.created ? rattrapage.created|format_date('long') : 'non.defini'|trans }}</td>
                        <td>{% if absences[rattrapage.etudiant.id] is defined and absences[rattrapage.etudiant.id][rattrapage.dateEval|date('Ymd')] is defined and absences[rattrapage.etudiant.id][rattrapage.dateEval|date('Ymd')][rattrapage.heureEval|date('Hi')] is defined %}{{ absences[rattrapage.etudiant.id][rattrapage.dateEval|date('Ymd')][rattrapage.heureEval|date('Hi')] ? 'Yes'|trans : 'No'|trans }}{% else %}Pas d'absence saisie{% endif %}</td>
                        <td>
                            {% if rattrapage.etatDemande == constant('App\\Entity\\Rattrapage::DEMANDE_FAITE') %}
                                <a href="#"
                                   data-rattrapage="{{ rattrapage.uuidString }}"
                                   class="btn btn-success btn-outline btn-square rattrapage-accepte bx_{{ rattrapage.uuidString }}"><i
                                            class="fas fa-check"
                                            data-provide="tooltip"
                                            data-placement="bottom"
                                            title="{{ 'atitle.accepter.la.demande'|trans }}"></i></a>
                                <a href="#"
                                   data-rattrapage="{{ rattrapage.uuidString }}"
                                   class="btn btn-warning btn-outline btn-square rattrapage-refuse bx_{{ rattrapage.uuidString }}"><i
                                            class="fas fa-ban"
                                            data-provide="tooltip"
                                            data-placement="bottom"
                                            title="{{ 'atitle.accepter.la.demande'|trans }}"></i></a>
                            {% elseif rattrapage.etatDemande == constant('App\\Entity\\Rattrapage::DEMANDE_ACCEPTEE') %}
                                <a href="#" class="btn btn-success btn-outline" data-provide="tooltip"
                                   data-placement="bottom" title="Demande acceptée"><i class="fas
                                fa-check"></i>
                                    Acceptée</a>
                            {% elseif rattrapage.etatDemande == constant('App\\Entity\\Rattrapage::DEMANDE_REFUSEE') %}
                                <a href="#" class="btn btn-warning btn-outline" data-provide="tooltip"
                                   data-placement="bottom" title="Demande refusée"><i class="fas
                                fa-ban"></i>
                                    Refusée</a>
                            {% else %}
                                Erreur
                            {% endif %}
                            <a href="{{ path('administration_rattrapage_delete', {uuid: rattrapage.uuidString}) }}"
                               data-csrf="{{ csrf_token('delete' ~ rattrapage.uuidString) }}"
                               class="btn btn-danger btn-outline btn-square supprimer"><i
                                        class="{{ iconDelete }}" data-provide="tooltip" data-placement="bottom"
                                        title="{{ 'atitle.supprimer'|trans }}"></i></a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('administration_rattrapage_export', {semestre:semestre.id,_format:'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf"
        },
        {
            type:'info',
            href:path('administration_rattrapage_export', {semestre:semestre.id,_format:'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-csv'
        },
        {
            type:'info',
            href:path('administration_rattrapage_export', {semestre:semestre.id,_format:'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'administration-etudiants-rattrapage'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatable') }}
    {{ encore_entry_link_tags('adm.rattrapages') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('datatable') }}
    {{ encore_entry_script_tags('adm.rattrapages') }}
{% endblock %}
