                       name="optMailReleve_{{ semestre.id }}"
                       id="optMailReleve_{{ semestre.id }}"
                       data-type="semestre"
                       data-id="{{ semestre.id }}">
                <span class="switch-indicator"></span>
            </label>
        </div>

