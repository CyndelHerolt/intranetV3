{{ semestre.libelle }}
<div class="row">
    <div class="col-md-6">
        <div class="media">
            <div class="media-body">
                <p><strong>{{ 'table.ppn_semestre'|trans }}</strong></p>
                <p>{{ 'help.ppn_semestre'|trans }}</p>
            </div>
            <label class="sr-only" for="ppnSemestre_{{ semestre.id
            }}">ppnSemestre_{{ semestre.id }}</label>
            <select class="form-select col-sm-6 changePpnSemestre"
                    name="ppnSemestre_{{ semestre.id }}"
                    id="ppnSemestre_{{ semestre.id }}"
                    data-type="semestre"
                    data-id="{{ semestre.id }}">
                <option value="">{{ 'non.selectione'|trans }}
                    / {{ 'aucun'|trans }}</option>
                {% for ppn in semestre.diplome.ppns %}
                    <option value="ppn{{ ppn.id }}"
                            {% if semestre.ppnActif != null and semestre.ppnActif
                            .id == ppn.id %}selected{% endif %}>

                        {{ ppn.libelle }} ({{ ppn.annee }})
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="media">
            <div class="media-body">
                <p><strong>{{ 'table.opt_mail_releve'|trans }}</strong></p>
                <p>{{ 'help.opt_mail_releve'|trans }}</p>
            </div>
