                    data-type="semestre"
                    data-id="{{ semestre.id }}">
                <option value="">{{ 'non.selectione'|trans }}
                    / {{ 'aucun'|trans }}</option>
                {% for personnel in user_data.personnels %}
                    <option value="pers{{ personnel.id }}"
                            {% if semestre.optDestMailReleve != null and semestre.optDestMailReleve.id == personnel.id %}selected{% endif %}>{{ personnel.display }}</option>
