{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.borne.show.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        {{ include('composants/adm-buttons-show.html.twig', {elt: 'borne', id: borne.id}) }}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.borne.show.heading'|trans }}</h4>
        <div class="card-body">

            <table class="table">
                <tbody>
                <tr>
                    <th>{{ 'table.id'|trans }}</th>
                    <td>{{ borne.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.icone'|trans }}</th>
                    <td>{{ borne.icone }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.couleur'|trans }}</th>
                    <td>{{ borne.couleur }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.message'|trans }}</th>
                    <td>{{ borne.message }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.semestres'|trans }}</th>
                    <td>{% for semestre in borne.semestres %}{{ semestre.display }}{% if not loop.last %}, {% endif
                        %}{% endfor
                        %}</td>
                </tr>
                <tr>
                    <th>{{ 'table.url'|trans }}</th>
                    <td>{{ borne.url }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.message_visible'|trans }}</th>
                    <td>{{ borne.visible ? 'Yes'|trans : 'No'|trans }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.qrcode'|trans }}</th>
                    <td>{{ borne.url }} {% if borne.url is defined %}<img src="{{ qr_code_data_uri(borne.url, { writer: 'svg', size: 150 }) }}" />{%
                            endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'table.dateDebutPublication'|trans }}</th>
                    <td>{{ borne.dateDebutPublication ? borne.dateDebutPublication|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.dateFinPublication'|trans }}</th>
                    <td>{{ borne.dateFinPublication ? borne.dateFinPublication|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.created'|trans }}</th>
                    <td>{{ borne.created ? borne.created|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'table.updated'|trans }}</th>
                    <td>{{ borne.updated ? borne.updated|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
