<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="card">
            <header class="card-header">
                <h2 class="card-title">{{ 'adm.projet'|trans }}</h2>
                <div class="card-header-actions" style="">
                    <a href="{{ path('administration_projet_periode_index') }}" class="btn btn-sm btn-info"
                       title="Créer une période de projet" data-provide="tooltip"> <i class="fas fa-plus"></i><span
                                class="sr-only">Créer une période de projet</span></a>
                </div>
            </header>
            <div class="card-body">
                <div class="row gap-y">
                    {% for periode in projetPeriodes %}
                        <div class="col-md-6">
                            <div>
                                <a href="{{ path('administration_projet_periode_gestion', {uuid:periode.uuidString}) }}"
                                   class="btn btn-block btn-primary"> Période : <strong>{{ periode.libelle }}
                                        ({{ periode.semestre.display }})</strong></a>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-sm-12">
                            <div class="alert alert-info">Aucune période de projet.</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-lg-4 col-sm-12">
        <div class="card">
            <header class="card-header">
                <h2 class="card-title">{{ 'adm.documents'|trans }}</h2>
                <div class="card-header-actions" style="">
                    <a href="{{ path('administration_document_new') }}" class="btn btn-sm btn-info"
                       title="Ajouter un document" data-provide="tooltip"> <i class="fas fa-plus"></i><span
                                class="sr-only">ajouter un document</span></a>
                </div>
            </header>

            <div class="card-body">
                <div class="row gap-y">
                    <div class="col-md-12">
                        <a href="{{ path('administration_document_index') }}"
                           class="btn btn-block btn-primary"> {{ 'adm.gerer.les.documents'|trans }}</a></div>

                </div>
                <div class="row gap-y">
                    <div class="col-md-12">
                        <a href="{{ path('administration_type_document_index') }}"
                           class="btn btn-block btn-primary"> {{ 'adm.gerer.les.categories.de.document'|trans }}</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
