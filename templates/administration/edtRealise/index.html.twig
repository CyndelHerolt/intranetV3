{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.edt.realise.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <a href="{{ path('administration_edt_index') }}"
           class="btn btn-primary btn-float"
           data-provide="tooltip"
           data-placement="bottom"
           title="{{ 'atitle.retour_administration'|trans }}">
            <i class="fas fa-arrow-left"></i></a>
        <a href="{{ path('administration_index') }}"
           class="btn btn-primary btn-float"
           data-provide="tooltip"
           data-placement="bottom"
           title="{{ 'atitle.retour_administration'|trans }}">
            <span class="material-icons">build</span></a>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.edt.realise.index.heading'|trans }}</h4>
        <div class="card-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="selectpersonnel">Personnel</label>
                    <select name="intervenant" id="selectpersonnel"
                            class="form-control selectpicker">
                        <option value="">Choisir</option>
                        {% for personnel in personnels %}
                                <option value="{{ personnel.id }}">{{ personnel.display }}</option>
                            {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="edtSelectSemestre">
                        Semestre
                    </label>
                    <select name="edtSelectSemestre" id="edtSelectSemestre"
                            class="form-control selectpicker">
                        <option value="0">Choisissez un semestre</option>
                        {% for semestre in semestres %}
                                    <option value="{{ semestre.id }}">{{ semestre.display }}</option>
                            {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="selectmatiere">Module</label>
                    <select id="selectmatiere" name="selectmatiere"
                            class="form-control selectpicker">
                        <option value="0">Choisissez d'abord un semestre</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <a href="#" id="btnafficheRealise" class="btn btn-block btn-primary">Afficher le
                                                                                             chronologique</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="blocchrono">
        <div class="card">
            <h4 class="card-title">{{ 'adm.edt.realise.chronologique.heading'|trans }}</h4>
            <div class="card-body">

            </div>
        </div>
    </div>

{% endblock %}
