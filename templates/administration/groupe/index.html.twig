{% extends 'base.html.twig' %}

{% block header %}{{ 'adm.groupes.index.titre'|trans }}{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <ul class="nav nav-tabs" role="tablist">
            {% for semestre in user_data.semestres %}
                <li class="nav-item">
                    <a class="nav-link {% if loop.first %}active show{% endif %}" data-toggle="tab"
                       href="#semestre{{ semestre.id }}" role="tab">{{ semestre.libelle }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        <div class="buttons">
            <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><i class="material-icons">build</i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="tab-content">
        {% for semestre in user_data.semestres %}
            <div class="tab-pane {% if loop.first %} active show{% endif %}"
                 id="semestre{{ semestre.id }}" role="tabpanel">
                <div class="card">
                    <header class="card-header">
                        <h2 class="card-title">Groupes du semestre {{ semestre.libelle }}</h2>
                        <div class="card-header-actions" style="">
                            <ul class="card-controls">
                                <li class="dropdown">
                                    <a data-toggle="dropdown" href="#"><i class="ti-more-alt rotate-90"></i><span
                                                class="sr-only">Menu Export</span></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="{{ path('administration_groupe_export', {_format:'pdf',
                                            semestre:semestre.id}) }}" class="dropdown-item"><i class="fa
                                            fa-file-pdf-o"></i> PDF</a>
                                        <a href="{{ path('administration_groupe_export', {_format:'xlsx',
                                            semestre:semestre.id}) }}" class="dropdown-item"><i class="fa fa-file-excel-o"></i>
                                            Excel</a>
                                        <a href="{{ path('administration_groupe_export', {_format:'csv',
                                            semestre:semestre.id}) }}" class="dropdown-item"><i class="fa fa-file-text-o"></i> CSV</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </header>

                    <div class="card-body">
                        <table class="table table-separated">
                            <thead>
                            <tr>
                                <th>Libellé</th>
                                <th>Code Apogée</th>
                                <th>Type Groupe</th>
                                <th>Parcours</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% import 'macros/tree-groupe.html.twig' as m %}
                                {% for groupe in groupes if (groupe.parent == null) %}
                                   {{ include('administration/groupe/_ligne_groupe.html.twig') }}
                                    {{ m.tree(groupe.enfants, 1, semestre) }}
                                    {{ include('administration/groupe/_ligne_add_groupe.html.twig', {parent:groupe,
                                        semestre:semestre
                                    }) }}
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card">
                    <header class="card-header">
                        <h2 class="card-title">Types de Groupe du semestre {{ semestre.libelle }}</h2>
                    </header>

                    <div class="card-body">
                        <table class="table table-separated">
                            <tbody id="typgeGroupe_bloc">
                            {{ include('administration/type_groupe/liste.html.twig') }}
                            </tbody>
                            <tfoot>
                            <tr id="ligne_add">
                                <td scope="row">
                                    <label for="type_groupe_libelle" class="sr-only">Libellé du type de groupe</label>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Libellé du type de groupe"
                                           id="type_groupe_libelle">
                                </td>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="type_groupe_defaut"
                                               id="type_groupe_defaut"
                                               value="true">
                                        <label class="form-check-label" for="type_groupe_defaut">
                                            Par défaut
                                        </label>
                                    </div>
                                </td>
                                <td class="text-right table-actions">
                                    <button class="btn btn-primary btn-block" id="add_type_groupe"
                                            data-semestre="{{ semestre.id }}"><span
                                                class="ti-plus"></span> Ajouter</button>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {
            type:'info',
            href:path('help_article', {sujet: 'administration_groupe'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}
