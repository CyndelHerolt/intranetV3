{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.apc_competence.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_apc_competence_new', {diplome:diplome.id}) }}"
               class="btn btn-info btn-sm btn-float"
               title="{{ 'atitle.creer_nouveau'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="fas fa-plus"></i>
                <span class="sr-only">{{ 'atitle.creer_nouveau'|trans }}</span>
            </a>
            <a href="{{ path('administration_apc_referentiel_index', {diplome:diplome.id}) }}"
               class="btn btn-primary btn-float"
               data-provide="tooltip"
               data-placement="bottom"
               title="Retour aux compétences">
                <i class="fas fa-home"></i>
                <span class="sr-only">Retour aux compétences</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.apc_competence.index.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table table-striped table-bordered" data-provide="datatables" data-checkbox="true">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Nom court</th>
                    <th>Couleur</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for apc_competence in apc_competences %}
                    <tr>
                        <td>{{ apc_competence.id }}</td>
                        <td>{{ apc_competence.libelle }}</td>
                        <td>{{ apc_competence.nomCourt }}</td>
                        <td>{{ apc_competence.couleur }}</td>
                        <td>
                            {{ include('composants/adm-buttons-table-index.html.twig', {elt: 'apc_competence', id:
                                apc_competence.id}) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'no.record.found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


