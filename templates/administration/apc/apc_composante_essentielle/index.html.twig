{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.apc_composante_essentielle.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        {{ include('composants/adm-buttons-index.html.twig', {elt:'apc_composante_essentielle'}) }}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.apc_composante_essentielle.index.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table table-striped table-bordered" data-provide="datatables" data-checkbox="true">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for apc_composante_essentielle in apc_composante_essentielles %}
                    <tr>
                        <td>{{ apc_composante_essentielle.id }}</td>
                        <td>{{ apc_composante_essentielle.libelle }}</td>
                        <td>
                            {{ include('composants/adm-buttons-table-index.html.twig', {elt: 'apc_composante_essentielle', id:
                                apc_composante_essentielle
                                .id}) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">{{ 'no.record.found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('administration_apc_composante_essentielle_export', {_format:'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf"
        },
        {
            type:'info',
            href:path('administration_apc_composante_essentielle_export', {_format:'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-csv'
        },
        {
            type:'info',
            href:path('administration_apc_composante_essentielle_export', {_format:'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel'
        },
        {
            type:'info',
            href:path('administration_apc_composante_essentielle_new'),
            title: 'ajouter'|trans,
            icone: 'fas fa-plus'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'administration_apc_composante_essentielle'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}
