{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.matiere.new.heading'|trans }}
{% endblock %}

{%block headeractions %}
<div class="header-action">
    {{ include('composants/adm-buttons-new.html.twig', {elt: 'matiere'}) }}
</div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.matiere.new.heading'|trans }}</h4>
        <div class="card-body">
            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_start(form) }}
            {{ include('administration/matiere/_form.html.twig', {'button_label': 'update'|trans})}}

            <button class="btn btn-success"><i class="fas fa-floppy-disk"></i> {{ button_label|default('label.save'|trans) }}
            </button>
            <div class="alert alert-info mt-2">
                Tous les champs avec un <span class="text-red">*</span> sont obligatoires
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adm.matieres') }}
{% endblock %}
