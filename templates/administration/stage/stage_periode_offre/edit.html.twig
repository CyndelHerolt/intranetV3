{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.stage_periode_offre.modification.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_stage_periode_offre_delete', {id: stage_periode_offre.id}) }}"
               data-csrf="{{ csrf_token('delete' ~ stage_periode_offre.id) }}"
               class="btn btn-danger btn-sm btn-float supprimer"
               title="{{ 'atitle.supprimer'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="ti-trash"></i>
                <span class="sr-only">{{ 'atitle.supprimer'|trans }}</span>
            </a>
            <a href="{{ path('administration_stage_periode_offre_show', {id: stage_periode_offre.id, stagePeriode: }) }}"
               class="btn btn-info btn-sm btn-float"
               title="{{ 'atitle.voir'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="ti-eye"></i>
                <span class="sr-only">{{ 'atitle.voir'|trans }}</span>
            </a>


            <a href="{{ path('administration_stage_periode_offre_index') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_liste'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="ti-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_liste'|trans }}</span>
            </a>

        </div>

    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.stage_periode_offre.modification.heading'|trans }}</h4>
        <div class="card-body">
            {{ include('composants/adm-form.html.twig', {'button_label': 'update'|trans}) }}
        </div>
    </div>
{% endblock %}
