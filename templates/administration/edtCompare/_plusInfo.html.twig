<table class="table table-striped">
    <thead>
    <tr>
        <td>Date</td>
        <td>Heure</td>
        <td>Enseignant</td>
        <td>Type</td>
        <td>Groupe</td>
    </tr>
    </thead>
    <tbody>
    {% for pl in planning %}
        <tr>
            <td>{{ pl.date|format_date('short') }}</td>
            <td>{{ pl.debutTexte }} | {{ pl.finTexte }}</td>
            {% if pl.intervenant != null %}
                <td>{{ pl.intervenant.displayPr }}</td>
            {% else %}
                <td> -</td>
            {% endif %}
            <td>{{ pl.type|upper }}</td>
            {% if pl.groupe != null %}
                <td>{{ pl.displayGroupe }}</td>
            {% else %}
                <td> -</td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>
