{% extends 'base.html.twig' %}

{% block header %}
    {{ 'absence.appel.semestre.heading'|trans({'%semestre%':semestre.libelle})|raw }}
{% endblock %}

{% block headerright %}
    <div class="right gap-items-2">
        {% for sem in user_data.semestresActifs %}
            <a href="{{ path('administration_absence_appel_index', {semestre:sem.id}) }}"
               class="btn btn-round {% if sem.id == semestre.id %}btn-primary{% endif %}"
               title="{{ 'atitle.changer.semestre'|trans }}"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
            >{{ sem.libelle }}</a>
        {% endfor %}
    </div>
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_semestre_index', {semestre:semestre.id}) }}"
               class="btn btn-primary btn-float" data-bs-toggle="tooltip"
               data-bs-placement="bottom" title="{{ 'atitle.retour_semestres'|trans }}"><i class="fas fa-arrow-left"></i><span
                        class="sr-only">{{ 'atitle.retour_semestres'|trans }}</span></a>
            <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-bs-toggle="tooltip"
               data-bs-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><i class="{{ iconAdmin }}"><span class="sr-only">Administration</span></i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>{{ 'table.date'|trans }}</th>
                    <th>{{ 'table.heure'|trans }}</th>
                    <th>{{ 'table.matiere'|trans }}</th>
                    <th>{{ 'table.groupe'|trans }}</th>
                    <th>{{ 'table.personnel'|trans }}</th>
                    <th>{{ 'table.etat'|trans }}</th>
                    <th>{{ 'table.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% set total = 0 %}
                {% set saisie = 0 %}
                {% for element in pl.evenements %}
                    {% set total = total + 1 %}
                    <tr>
                        <td>{{ element.date|format_date('short') }}</td>
                        <td>{{ element.heure }}</td>
                        <td>{{ element.display }}</td>
                        <td>{{ element.groupe }}</td>
                        <td>{{ element.personnel }}</td>
                        <td>
                            {% if statsAppel[element.date|date('Ymd')] is defined %}
                                {% if statsAppel[element.date|date('Ymd')][element.typeIdMatiere] is defined %}
                                    {% if statsAppel[element.date|date('Ymd')][element.typeIdMatiere][element.heure] is defined %}
                                        {% if statsAppel[element.date|date('Ymd')][element.typeIdMatiere][element.heure][element.groupeId]
                                            is defined %}
                                            {% set saisie = saisie + 1 %}
                                            <span class="badge badge-success">{{ statsAppel[element.date|date('Ymd')
                                                ][element.typeIdMatiere][element.heure][element.groupeId]|trans }}</span>
                                        {% else %}
                                            <span class="badge badge-warning">Pas de saisie</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge badge-warning">Pas de saisie</span>
                                    {% endif %}
                                {% else %}
                                    <span class="badge badge-warning">Pas de saisie</span>
                                {% endif %}
                            {% else %}
                                <span class="badge badge-warning">Pas de saisie</span>
                            {% endif %}
                        </td>
                        <td>{{ 'table.actions'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {# {{ table_render(table) }} #}

            {# <div class="alert alert-info"> #}
            {# {{ total }} créneaux de cours et {{ saisie }} créneaux saisis. Soit {{ (saisie/total)|number_format #}
            {# (2) }}% de saisie. #}
            {# </div> #}
        </div>
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('administration_absence_appel_export', {semestre:semestre.id, _format: 'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf"},
        {
            type:'info',
            href:path('administration_absence_appel_export', {semestre:semestre.id, _format: 'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-csv'
        },
        {
            type:'info',
            href:path('administration_absence_appel_export', {semestre:semestre.id, _format: 'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'administration-absence-suivi'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}


