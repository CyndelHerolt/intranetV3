{% extends 'base.html.twig' %}

{% block header %}
    {{ 'justificatif.absence.semestre.heading'|trans({'%semestre%':semestre.libelle})|raw }}
{% endblock %}

{% block headerright %}
    <div class="right gap-items-2">
        <a href="{{ path('administration_absence_justificatif_new', {semestre: semestre.id}) }}"
           class="btn btn-info btn-sm"
           title="{{ 'atitle.creer_nouveau'|trans }}"
           data-bs-toggle="tooltip" data-bs-placement="bottom"
        >
            <i class="fas fa-plus"></i>
            <span class="sr-only">{{ 'atitle.creer_nouveau'|trans }}</span>
        </a>
        {{ include('administration/_navSemestre.html.twig', {path_name: 'administration_absences_justificatif_semestre_liste'}) }}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            {{ table_render(table) }}
        </div>
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-button-help.html.twig', {
        href:path('help_article', {sujet: 'administration_justificatif_absence'})
    }
    ) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adm.justificatifs') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adm.justificatifs') }}
{% endblock %}
