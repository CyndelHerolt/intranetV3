{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.article.new.heading'|trans }}
{% endblock %}

{%block headeractions %}
<div class="header-action">
    {{ include('composants/adm-buttons-new.html.twig', {elt: 'article'}) }}
</div>
{% endblock %}

{% block content %}
<div class="card">
    <h4 class="card-title">{{ 'adm.article.new.heading'|trans }}</h4>
    <div class="card-body">
        {{ include('composants/adm-form.html.twig') }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('tinyMce') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tinyMce') }}
{% endblock %}
