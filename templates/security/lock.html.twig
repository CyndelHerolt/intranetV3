{% extends 'base-speciale.html.twig' %}

{% block header %}{{ 'security.lock.heading'|trans }}{% endblock %}

{% block content %}
    <div class="row no-gutters min-h-fullscreen bg-white">
        <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url({{ asset('assets/bg/2.jpg') }})" data-overlay="6">

            <div class="row h-100 pl-50">
                <div class="col-md-10 col-lg-8 align-self-end">
                    <img src="{{ asset('upload/logo/logo_intranet_iut_troyes.svg') }}" alt="Logo Intranet"
                         width="150px">
                    <br><br><br>
                    {# todo: citation aléatoire ... #}
                    <h4 class="text-white">Intranet est l'intranet le plus performant jamais produit.</h4>
                    <p class="text-white">Ici prochainement une jolie citation aléatoire...</p>
                    <br><br>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
            <div class="header-special-lock" style="background-color: {{ settings('COLOR_IUT') }}">
                <img src="{{ asset('upload/logo/'~settings('LOGO_IUT')) }}" alt="Logo de
            l' {{ settings('NOM_IUT') }}" class="img-fluid" style="height: 100px">
            </div>
            <div class="px-80 py-30 text-center">
                <div>
                    {% if is_granted('ROLE_ETUDIANT') %}
                        <img class="avatar avatar-xxl" src="{{ asset('upload/etudiants/'~user_data.user.photoName) }}"
                             alt="photo de {{ user_data.user.displayPr }}">
                    {% else %}
                        <img class="avatar avatar-xxl" src="{{ asset('upload/personnels/'~user_data.user
                            .photoName) }}"
                             alt="photo de {{ user_data.user.displayPr }}">
                    {% endif %}
                    <br><br>
                    <h5 class="lead">{{ user_data.user.displayPr }}</h5>
                    <small>{{ 'saisir.password.lock'|trans }}</small>
                </div>

                <hr class="w-30px">

                <form class="form-type-material" method="post">
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" name="password">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                    </div>

                    <br>
                    <button class="btn btn-bold btn-block btn-primary"
                            type="submit">{{ 'security.login.deverouiller'|trans }}</button>
                </form>

                <p class="text-center text-muted fs-13 mt-20">{{ 'vous.netes.pas'|trans }} {{ user_data.user.displayPr }}
                    ? <a class="text-primary fw-500" href="#">{{ 'connectez.vous'|trans }}</a></p>
            </div>
        </div>
    </div>

{% endblock %}
