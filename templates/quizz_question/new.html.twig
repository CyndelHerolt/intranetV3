{% extends is_granted('ROLE_ADMINISTRATIF') ? 'base-administratif.html.twig' : 'base.html.twig' %}

{% block header %}
    {{ 'quizz.question.new.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('quizz_question_index') }}"
               class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_liste'|trans }}"
               data-provide="tooltip"
               data-placement="bottom">
                <i class="fas fa-arrow-left"></i>
                <span class="sr-only">{{ 'atitle.retour_liste'|trans }}</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'quizz.question.new.heading'|trans }}</h4>
        <div class="card-body">
            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_start(form) }}
            {#{{ dump(form.dateRange) }}#}
            {{ form_widget(form) }}
            <h3>RÃ©ponses</h3>
            <div id="reponses">
                <div class="alert alert-info">Choisir d'abord le type de question</div>
            </div>

            <button class="btn btn-success mt-10">{{ button_label|default('label.save'|trans) }}</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

