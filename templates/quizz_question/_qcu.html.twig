<fieldset class="form-group">
    <legend class="col-form-label required">{{ question.libelle }}</legend>
    <div aria-describedby="quizz_question_{{ question.id }}_help">
        <div class="row">
            {% for reponse in question.quizzReponses %}
                <div class="col-sm-12 col-md-3">
                    <div class="form-check">
                        <input type="radio" id="quizz_question_qcu_{{ question.id }}_{{ loop.first }}"
                               name="quizz_question_reponses_{{ question.id }}"
                               required="required"
                               class="form-check-input" value="{{ reponse.valeur }}">
                        <label class="form-check-label required" for="quizz_question_qcu_{{ question.id }}_{{ loop.first }}">{{ reponse.libelle }}</label>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <small id="quizz_question_{{ question.id }}_help" class="form-text text-muted">{{ question.help }}</small>
</fieldset>
