{% extends 'base-but.html.twig' %}

{% block header %}Référentiel de formation{% endblock %}

{% block content %}


    <div class="row">
        {% for sae in saes %}
            <div class="col-4">
                <div class="card">
                    <h4 class="card-title">{{ sae.codeSae }} | {{ sae.libelle }}
                        <span class="badge badge-primary">{{ sae
                            .semestre.libelle }}</span></h4>
                    <div class="card-body">
                        <p>{{ sae.description|nl2br }}</p>
                        <p>
                            <a data-provide="tooltip"
                               href="{{ path('but_fiche_sae',
                                   {'apcSae': sae.id}) }}"
                               class="btn btn-info"
                               data-placement="bottom"
                               title="Voir la fiche SAE"
                               target="_blank"
                            >
                                Voir la fiche SAE
                            </a>
                        </p>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>CM/TD</th>
                                <th>TP</th>
                                <th>Projet</th>
                                <th>Coeff.</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{ sae.heuresCM + sae.heuresTD }} heure(s)</td>
                                <td>{{ sae.heuresTP }} heure(s)</td>
                                <td>{{ sae.heuresProjet }} heure(s)</td>
                                <td>-</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        {% for competence in sae.apcSaeCompetences %}
                            <span class="badge badge-{{ competence.competence.couleur }}">
                        {{ competence.competence.nomCourt }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
