{% extends 'base-but.html.twig' %}

{% block header %}Référentiel de formation{% endblock %}

{% block content %}


    <div class="row">
        {% for sae in saes %}
            <div class="col-4">
                <div class="card">
                    <h4 class="card-title">{{ sae.codeSae }} | {{ sae.libelle }}
                        <span class="badge badge-primary">{{ sae
                            .semestre.libelle }}</span></h4>
                    <div class="card-body">
                        <p>{{ sae.description|nl2br }}</p>
                        <p>
                            <button data-provide="modaler tooltip"
                                    data-url="{{ path('but_fiche_sae',
                                        {'apcSae': sae.id}) }}"
                                    class="btn btn-info"
                                    data-size="lg"
                                    data-placement="bottom"
                                    title="Voir la fiche SAE"
                                    data-title="Fiche de la SAÉ : {{ sae.codeSae }} | {{ sae.libelle }}"
                            >
                                Voir la fiche SAE
                            </button>
                    </div>
                    <div class="card-footer">
                        {% for competence in sae.apcSaeCompetences %}
                            <span class="badge badge-{{ competence.competence.couleur }}">
                        {{ competence.competence.nomCourt }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
