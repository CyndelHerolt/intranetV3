{% extends 'base.html.twig' %}

{% block header %}
    {{ 'app.etudiant.absence.justificatif.edit.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('application_index',{'onglet': 'justificatif'}) }}" class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_liste'|trans }}" data-provide="tooltip"
               data-placement="bottom"><i class="fas fa-th-list"></i>
            </a>
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_dashboard'|trans }}">
                <i class="{{ iconDashboard }}"><span class="sr-only">dashboard</span></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'app.etudiant.absence.justificatif.edit.heading'|trans }}</h4>
        <div class="card-body">
            {{ include('composants/adm-form.html.twig', {'button_label': 'update'|trans}) }}
        </div>
    </div>
{% endblock %}
