<div class="flexbox mb-20">
    <div class="lookup">
        <input class="w-200px" type="search" name="s" placeholder="Search" id="testSearch">
    </div>

    <div class="btn-toolbar">
        <div class="btn-group btn-group-sm mr-10">
            <button class="btn" title="Définir des filtres"
                    data-provide="tooltip">
                Filtrer <i class="fas fa-caret-down"></i>
            </button>
            <button class="btn"
                    title="Supprimer les filtres"
                    data-provide="tooltip"
            >
                Réinitialiser <i class="fas fa-times"></i></button>
        </div>
        <div class="btn-group btn-group-sm">
            <button class="btn" title="" data-provide="tooltip" data-original-title="Refresh"><i
                        class="fas fa-redo"></i></button>
            <button class="btn" title="" data-provide="tooltip" data-original-title="Add new"><i
                        class="fas fa-plus"></i></button>
        </div>

        <div class="btn-group btn-group-sm ml-2 d-none d-sm-flex">
            <button class="btn dropdown-toggle" data-toggle="dropdown"
                    aria-expanded="false">Exporter
            </button>
            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; top: 36px; left: -80px; will-change: top, left;">
                <a class="dropdown-item" href="#">CSV</a>
                <a class="dropdown-item" href="#">SQL</a>
                <a class="dropdown-item" href="#">PDF</a>
                <a class="dropdown-item" href="#">Text</a>
            </div>
        </div>
    </div>
</div>
<form class="form-search" enctype="multipart/form-data" method="post">
    <select id="testFiltreSelect" name="app_datatable_tbf[groupe]">
        <option value="">Tout</option>
        <option value="A">A</option>
        <option value="B">B</option>
    </select>
</form>
<table class="table table-hover table-striped table-bordered"
       id="test"
>
    {# table-responsive table-responsive-md #}
    <thead>
    <tr>
        {% if table.isSelectable %}
            <th class="w-40px">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input">
                    <label class="custom-control-label"></label>
                </div>
            </th>
        {% endif %}
        {% if table.numerote %}
            <th>#</th>
        {% endif %}
        {% for colonne in table.colonnes %}
            <th>
                {% if colonne.sortable %}
                    <a href="" class="text-white">{{ colonne.label }}
                        {% if (not sort is defined and loop.first) or (sort is defined and sort == colonne) %}

                            <i class="fas fa-caret-down"></i>
                        {% endif %}
                    </a>
                {% else %}
                    {{ colonne.label }}
                {% endif %}
            </th>
        {% endfor %}
        <th class="w-150px">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for row in table.datas %}
        <tr>
            {% if table.isSelectable %}
                <td>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label"></label>
                    </div>
                </td>
            {% endif %}
            {% if table.numerote %}
                <th scope="row">{{ loop.index }}</th>
            {% endif %}
            {% for colonne in table.colonnes %}
                <td>{{ row[colonne.nom] }}</td>
            {% endfor %}

            <td class="text-right table-actions">
                {% for action in table.actions.btnVisible %}
                    <a class="table-action hover-{{ action.couleur }} text-{{ action.couleur }}"
                       href="{{ path(action.route, {id:row.id}) }}">
                        <i class="{{ action.icone }}"></i>
                    </a>
                {% endfor %}
                {% if table.actions.btnMenu|length > 0 %}
                    <div class="dropdown table-action">
                            <span class="dropdown-toggle no-caret hover-primary" data-toggle="dropdown"
                                  aria-expanded="false"><i class="fas fa-ellipsis-v"></i></span>
                        <div class="dropdown-menu dropdown-menu-right">
                            {% for action in table.actions.btnMenu %}
                                <a class="dropdown-item" href="{{ path(action.route) }}"><i class="{{ action.icone }}"></i>
                                    {{ action.label }}</a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
