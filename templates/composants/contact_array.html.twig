{% if contact != null %}
    <tr>
        <th>{{ 'table.prenom_nom'|trans }}</th>
        <td>
            {% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="prenom"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger le prénom">
                    {{ contact.prenom }}
                </a>
                <a class="editable"
                   data-field="nom"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger le nom">
                    {{ contact.nom }}
                </a>
            {% else %}
                {{ contact.display }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>{{ 'table.fonction'|trans }}</th>
        <td>{% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="fonction"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger la fonction">
                    {{ contact.fonction }}
                </a>
            {% else %}
                {{ contact.fonction }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>{{ 'table.email'|trans }}</th>
        <td>
            {% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="email"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger l'email">
                    {{ contact.email }}
                </a>
            {% else %}
                {{ contact.email|mailto }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>{{ 'table.telephone'|trans }}</th>
        <td>
            {% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="telephone"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger le numéro de téléphone">
                    {{ contact.telephone }}
                </a>
            {% else %}
                {{ contact.telephone|tel_format }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>{{ 'table.portable'|trans }}</th>
        <td>
            {% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="portable"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger le numéro de portable">
                    {{ contact.portable }}
                </a>
            {% else %}
                {{ contact.portable|tel_format }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>{{ 'table.fax'|trans }}</th>
        <td>
            {% if editable is defined and editable == 'true' %}
                <a class="editable"
                   data-field="fax"
                   data-href="{{ path('contact_ajax_edit', {id:contact.id}) }}"
                   title="Corriger le numéro de fax">
                    {{ contact.fax }}
                </a>
            {% else %}
                {{ contact.fax|tel_format }}
            {% endif %}
        </td>
    </tr>
{% else %}
    <tr>
        <th>{{ 'table.contact'|trans }}</th>
        <td>{{ 'non.defini'|trans }}</td>
    </tr>
{% endif %}
