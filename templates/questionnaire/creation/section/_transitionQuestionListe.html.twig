<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Valeurs</th>
        <th>Questions</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for key, condition in conditions %}
        <tr id="ligne_{{ key }}">
            <td>{{ condition.type }}</td>
            {% if condition.type== 'condition' %}
                <td>{% for crit in condition.criteres %}{{ crit }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
                <td>{{ condition.declenchement }}</td>
            {% else %}
                <td>{% for crit in condition.criteres %}{{ crit }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
                <td>{% for quest in condition.questions %}{{ quest }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
            {% endif %}
            <td>
                <button class="btn btn-danger-outline btn-sm"
                        {{ stimulus_action('questionnaire--configuration', 'delete', 'click', {key: key}) }}
                ><i class="{{ iconDelete }}"></i></button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
