{% extends 'base.html.twig' %}

{% block header %}{{ 'app.personnel.note.import.titre'|trans }} | <strong>{{ matiere.libelle }}</strong>{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_dashboard'|trans }}"><span class="material-icons">dashboard</span></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'app.personnel.note.import.titre'|trans }} | <strong>{{ matiere.libelle }}</strong></h4>
        <div class="card-body">
            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="alert alert-info">L'import doit se faire au format xlsx ou csv (séparateur ; ou ,). Le
                fichier doit contenir les <strong>colonnes suivantes</strong> : Numéro étudiant (<i>num_etudiant</i>)
                , la note (<i>note</i>), le commentaire éventuel (<i>commentaire</i>). Les colonnes doivent être nommées (première ligne) ou
                respecter l'odre précédent. <a href="">Vous pouvez récupérer le fichier type pour le semestre
                    ici</a>
            </div>
            <button class="btn btn-success">{{ button_label|default('label.import'|trans) }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}



