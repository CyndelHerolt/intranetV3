{% extends 'base.html.twig' %}

{% block header %}Saisie d'absences pour | <strong>{{ matiere.display }}</strong>{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('application_personnel_absence_voir', {matiere: matiere.typeIdMatiere}) }}"
               class="btn btn-info btn-sm btn-float" title="Voir les absences de cette matière" data-bs-toggle="tooltip" data-bs-placement="bottom"
            ><i class="fas fa-eye"></i></a>
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.retour_dashboard'|trans }}">
                <i class="{{ iconDashboard }}"><span class="sr-only">dashboard</span></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    {% if semestre == null %}
        <div class="alert alert-info">Ce créneau ne peut pas faire l'objet d'une saisie d'absence</div>
    {% else %}
        {% if event is defined %}
            {{ render(controller('App\\Controller\\bloc_saisie_absence\\SaisieAbsenceController::index',
                {semestre:semestre, matiere:matiere, event:event})) }}
        {% else %}
            {{ render(controller('App\\Controller\\bloc_saisie_absence\\SaisieAbsenceController::index',
                {semestre:semestre, matiere:matiere, event: null})) }}
        {% endif %}
    {% endif %}
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('application_personnel_absence_export', {matiere:matiere.id, _format:'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf"
        },
        {
            type:'info',
            href:path('application_personnel_absence_export', {matiere:matiere.id,_format:'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-csv'
        },
        {
            type:'info',
            href:path('application_personnel_absence_export', {matiere:matiere.id,_format:'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'personnel_absence'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('absences') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('absences') }}
{% endblock %}
